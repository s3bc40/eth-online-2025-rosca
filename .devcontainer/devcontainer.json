{
  "name": "ETH Online 2025 ROSCA Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ubuntu/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/home/ubuntu/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "JuanBlanco.solidity",
        "tamasfe.even-better-toml",
        "eamodio.gitlens",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-containers",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "postCreateCommand": "pnpm install && pnpm run envio:codegen",
  "remoteUser": "ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "mobs_mode": "non-root"
    }
  }
}
